<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheelView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<com.example.mywheelview.LocationView
	    android:id="@+id/locationView"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    wheelView:unSelectedColor="#cccccc"
	    wheelView:selectedColor="#33B5E5"
	    wheelView:markerLineColor="#33B5E5"
	    wheelView:markerLineHeight="1px"
	    wheelView:marginItemCount="2"
	    android:textSize="16sp"/>
</LinearLayout>
